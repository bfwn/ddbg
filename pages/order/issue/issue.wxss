/* issue.wxss */
.issueinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.issueinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.issueinfo-discription {
  color: black;
}

.request_infos {
    position: relative;
    line-height: 1.4117;
}

.request_infos_label{
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.weui-cell {
  padding: 20rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  /*flex-direction:column;*/
}

.weui-cell:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 30rpx;
  height: 2rpx;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
  left: 30rpx;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}

.request_btn{
    margin-top: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    font-size: 40rpx;
    background-color: #66cc99; 
    color:white;
    
}

.btn_tap{
  background-color: #339966
}